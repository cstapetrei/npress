{
  "name": "NPress",
  "version": "1.0.0",
  "description": "NodeJS + Typescript pseudo framework project",
  "scripts": {
    "dev": "node node_modules/ts-node-dev/bin/ts-node-dev --respawn --transpileOnly --inspect=9300 --watch src/views,src/views/admin,src/views/admin/partials,src/views/partials,src/views/index,src/views/error -- server.ts --poll",
    "prod": "gulp && node ./build/server.js NODE_ENV=production",
    "migration:run": "ts-node ./node_modules/typeorm/cli -f ./migrationsConfig.ts migration:run"
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      ".git"
    ],
    "delay": 2000,
    "watch": [
      "src/views",
      "src/config",
      "src/controllers",
      "src/entity",
      "src/library",
      "src/routes",
      "src/app.ts"
    ],
    "ext": "ts,twig",
    "exec": "npm run dev:twig-tsc",
    "execMap": {
      "ts": "npm run dev:tsc",
      "twig": "npm run dev:twig-tsc"
    },
    "inspect": true
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:cstapetrei/npress.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cstapetrei/npress/issues"
  },
  "homepage": "https://github.com/cstapetrei/npress/tree/master",
  "dependencies": {
    "@types/express": "^4.17.6",
    "@types/express-session": "^1.17.0",
    "@types/formidable": "^1.0.31",
    "@types/mysql": "^2.15.13",
    "@types/node": "^11.15.14",
    "@types/pg": "^7.14.3",
    "@types/socket.io": "^2.1.8",
    "@types/twig": "^1.12.3",
    "class-validator": "^0.11.1",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "formidable": "^1.2.2",
    "gulp": "^4.0.2",
    "gulp-newer": "^1.4.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^6.0.0-alpha.1",
    "mysql": "^2.18.1",
    "pg": "^7.18.2",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "twig": "^1.15.1",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.25",
    "typescript": "^3.9.3"
  }
}
