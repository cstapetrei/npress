{% if data.id is not empty %}
    <input type="hidden" name="id" value={{ data.id }} />
{% endif %}
<div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" name="name" value="{{ data.name|default('') }}">
</div>
<div class="form-group">
    <label>Slug</label>
    <input type="text" class="form-control" readonly value="{{ data.slug|default('') }}">
</div>
<div class="form-group">
    <label>Content</label> <small>(you can insert twig code here)</small>
    <textarea class="form-control" name="content">{{ data.content|default('') }}</textarea>
</div>