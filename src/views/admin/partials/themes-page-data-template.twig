<div class="row h-100">
    {% for item in data %}
        <div class="col-md-3">
        <div class="card{{ item.status == 'active' ? ' card-success' : '' }} h-100">
            <div class="card-header">
                <div class="card-title">{{ item.name|capitalize }}</div>
                <div class="card-tools">
                    {% if item.status != 'active' %}
                        <button type="button" class="btn btn-tool js-activate" data-id="{{ item.id }}" title="Activate"><i class="fas fa-check"></i></button>
                    {% endif %}
                    <button type="button" class="btn btn-tool js-import" data-id="{{ item.id }}" title="Import data"><i class="fas fa-upload"></i></button>
                </div>
            </div>
            <div class="card-body d-flex justify-content-center align-items-center">
                {% if item.img %}
                    <img src="{{ item.img }}" class="img-fluid" />
                {% else %}
                    <span>No image</span>
                {% endif %}
            </div>
        </div>
    </div>
    {% endfor %}
</div>
