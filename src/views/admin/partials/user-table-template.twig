{% set columns = [ { id: 'id', label: 'Id' }, { id: 'email', label: 'Email' }, { id: 'role', label: 'Role' }, { id: 'created_at', label: 'Created at' }, { id: 'status', label: 'Status' } ] %}
<table class="table table-bordered table-hover dataTable table-sm" role="grid">
    <thead>
        <tr role="row">
            {% for item in columns %}
                <th class="sorting{{ sort.column == item.id ? " sorting_"~sort.order : ''}}" data-sort-column="{{ item.id }}"{% if sort.column == item.id %} data-sort-order="{{ sort.order }}"{% endif %}>{{ item.label }}</th>
            {% endfor %}
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for u in data %}
        <tr role="row">
            <td>{{ u.id }}</td>
            <td>{{ u.email }}</td>
            <td>{{ u.role|capitalize }}</td>
            <td>{{ u.created_at|date('d/m/Y') }}</td>
            <td>{{ u.status|capitalize }}</td>
            <td>
                <a href="#" class="btn btn-primary btn-xs js-edit" data-id="{{ u.id }}" title="Edit"><i class="fas fa-edit"></i></a>
                <button class="btn btn-danger btn-xs js-delete" data-id="{{ u.id }}" title="Delete"><i class="fas fa-trash-alt"></i></button>
            </td>
        </tr>
    {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            {% for item in columns %}
                <th>{{ item.label }}</th>
            {% endfor %}
            <th>Actions</th>
        </tr>
    </tfoot>
</table>