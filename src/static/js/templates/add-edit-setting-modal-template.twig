{% if data.id is not empty %}
    <input type="hidden" name="id" value={{ data.id }} />
{% endif %}

{% set inputTypes = ['text','email','checkbox', 'date', 'number', 'tel', 'image'] %}

<div class="form-group">
    <label>Key</label>
    <input type="text" class="form-control" name="key" value="{{ data.key|default('') }}">
</div>
<div class="form-group">
    <label>Value</label>
    <input type="text" class="form-control" name="value" value="{{ data.value|default('') }}">
</div>
<div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" name="name" value="{{ data.name|default('') }}">
</div>
<div class="form-group">
    <label>Description</label>
    <input type="text" class="form-control" name="description" value="{{ data.description|default('') }}">
</div>
<div class="form-group">
    <label>Input type</label>
    <select class="form-control" name="input_type">
        {% for t in inputTypes %}
            <option value="{{ t }}"{{ data.input_type == t ? ' selected' : '' }}>{{ t|capitalize }}</option>
        {% endfor %}
    </select>
</div>